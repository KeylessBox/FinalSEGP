            <Label layoutX="42.0" layoutY="87.0" prefHeight="34.0" prefWidth="267.0" text="Sign Up with your Account "
                   textFill="#726e6e">
                <font>
                    <Font name="Calibri Light" size="24.0"/>
                </font>
            </Label>
            <ImageView layoutX="60.0" layoutY="254.0">
                <image>
                    <Image url="@../res/login/ID.png"/>
                </image>
            </ImageView>
            <ImageView layoutX="60.0" layoutY="292.0">
                <image>
                    <Image url="@../res/login/Password.png"/>
                </image>
            </ImageView>
            <PasswordField id="textfield" fx:id="pass" layoutX="95.0" layoutY="285.0" prefHeight="34.0"
                           prefWidth="219.0" promptText="Password">
                <font>
                    <Font name="Calibri Light" size="18.0"/>
                </font>
            </PasswordField>
            <Button layoutX="314.0" layoutY="290.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="52.0"
                    styleClass="button_sign" text="SHOW" textFill="WHITE">
                <font>
                    <Font name="Calibri" size="12.0"/>
                </font>
                <tooltip>
                    <Tooltip text="Press to show hidden password"/>
                </tooltip>
            </Button>
            <TextField id="textfield" fx:id="email" layoutX="95.0" layoutY="242.0" prefHeight="36.0" prefWidth="219.0"
                       promptText="Email or ID">
                <font>
                    <Font name="Calibri Light" size="18.0"/>
                </font>
            </TextField>
            <Button fx:id="signUp" layoutX="42.0" layoutY="363.0" minWidth="317.0" mnemonicParsing="false"
                    onAction="#signUp" prefHeight="44.0" prefWidth="335.0" styleClass="button_sign" text="Sign Up"
                    textFill="WHITE">
                <font>
                    <Font name="Calibri Bold" size="18.0"/>
                </font>
                <tooltip>
                    <Tooltip text="Press to create new account"/>
                </tooltip>
            </Button>
            <TextField id="textfield" fx:id="name" layoutX="95.0" layoutY="156.0" prefHeight="36.0" prefWidth="219.0"
                       promptText="First Name">
                <font>
                    <Font name="Calibri Light" size="18.0"/>
                </font>
            </TextField>
            <TextField id="textfield" fx:id="surname" layoutX="95.0" layoutY="199.0" prefHeight="36.0" prefWidth="219.0"
                       promptText="Last Name">
                <font>
                    <Font name="Calibri Light" size="18.0"/>
                </font>
            </TextField>
            <ImageView layoutX="60.0" layoutY="207.0">
                <image>
                    <Image url="@../res/login/users-edit-user-icon.png"/>
                </image>
            </ImageView>
            <ImageView layoutX="60.0" layoutY="165.0">
                <image>
                    <Image url="@../res/login/users-edit-user-icon.png"/>
                </image>
            </ImageView>
            <Label fx:id="ErrMessage" layoutX="43.0" layoutY="115.0" prefHeight="36.0" prefWidth="342.0" text=""
                   textFill="RED" visible="false">
                <font>
                    <Font name="Calibri" size="18.0"/>
                </font>
            </Label>
        </children>
    </Pane>
    <Pane fx:id="SignIn" layoutY="-7.0" prefHeight="528.0" prefWidth="417.0" styleClass="custom_signIn"
          stylesheets="@../css/sign_window.css">
        <children>
            <Label layoutX="42.0" layoutY="87.0" prefHeight="34.0" prefWidth="267.0" text="Sign In with your Account "
                   textFill="#726e6e">
                <font>
                    <Font name="Calibri Light" size="24.0"/>
                </font>
            </Label>
            <ImageView layoutX="59.0" layoutY="167.0">
                <image>
                    <Image url="@../res/login/ID.png"/>
                </image>
            </ImageView>
            <ImageView layoutX="59.0" layoutY="207.0">
                <image>
                    <Image url="@../res/login/Password.png"/>
                </image>
            </ImageView>
            <PasswordField id="textfield" fx:id="pw" layoutX="81.0" layoutY="200.0" prefHeight="34.0" prefWidth="219.0"
                           promptText="Password">
                <font>
                    <Font name="Calibri Light" size="18.0"/>
                </font>
            </PasswordField>
            <Button layoutX="314.0" layoutY="204.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="52.0"
                    styleClass="button_sign" text="SHOW" textFill="WHITE">
                <font>
                    <Font name="Calibri" size="12.0"/>
                </font>
                <tooltip>
                    <Tooltip text="Press to show the hidden password"/>
                </tooltip>
            </Button>
            <TextField id="textfield" fx:id="username" layoutX="81.0" layoutY="155.0" prefHeight="36.0"
