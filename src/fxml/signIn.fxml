<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- Sign In scene, the design for the sign in functionality -->
<!-- Anchor Pane--><!-- -->
<AnchorPane minHeight="400" minWidth="500" opacity="1.0" styleClass="root" stylesheets="@../css/login.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <!-- Default image for now -->
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="156.0" layoutY="47.0" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="80.0">
            <image>
                <Image url="@../res/img/defaultProfile.jpg" />
            </image>
        </ImageView>
        <!-- Where user inputs information and presses the buttons to sign in -->
        <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.leftAnchor="125.0" AnchorPane.topAnchor="225.0">
            <children>

                <Label text="User Name" GridPane.columnIndex="0" />
                <TextField fx:id="username" GridPane.columnIndex="1" />

                <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="pw" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <HBox alignment="bottom_right" prefHeight="23.0" prefWidth="140.0" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>

                        <Button id="signUpButton" onAction="#signUp" prefHeight="23.0" prefWidth="68.0" text="Sign Up">

                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>

                        <Button id="loginButton" onAction="#logIn" prefHeight="23.0" prefWidth="68.0" text="Log in" />

                    </children>
                 <opaqueInsets>
                  <Insets />
                 </opaqueInsets>
                </HBox>

            </children>
        </GridPane>

    </children>
</AnchorPane>
