<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="400" minWidth="500" opacity="1.0" styleClass="root" stylesheets="@../CSS/Login.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
    <children>
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="156.0" layoutY="47.0" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="80.0">
            <image>
                <Image url="@../res/img/defaultProfile.jpg" />
            </image>
        </ImageView>
        <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.leftAnchor="125.0" AnchorPane.topAnchor="225.0">
            <children>
                <Label text="User Name" GridPane.columnIndex="0" />
                <TextField fx:id="username" GridPane.columnIndex="1" />
                <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="pw" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <HBox alignment="bottom_right" prefHeight="23.0" prefWidth="140.0" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Button id="sigUpButton" onAction="#signUp" prefHeight="23.0" prefWidth="68.0" text="Sign Up">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
                  <Button id="loginButton" onAction="#logIn" prefHeight="23.0" prefWidth="68.0" text="Log in" />
                    </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
                </HBox>
                <Text fx:id="actionTarget" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
